<div class="container d-flex flex-wrap justify-content-center">
    {{#each product}}
    <div class="card m-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{thumbnail}}" class="img-fluid rounded-start" alt="product image">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">{{description}}</p>
                    <p class="card-text"><span class="fw-bold">Brand: </span><small class="text-muted">{{brand}}</small>
                    </p>
                    <p class="card-text"><span class="fw-bold">Price: </span><small
                            class="text-muted">{{price}}$</small></p>
                    <a class="btn btn-dark" href="#" role="button">Buy</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>